<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout id="layout" direction="vertical">
                    <children>
                        <flow-layout id="manual_layout" direction="vertical">
                            <children>
<!--*                                HERE ALL MANUAL-->
                                <texture texture="redstone-helper:textures/gui/manual/redstone_helper_logo_text.png" region-width="200" region-height="30" texture-width="200" texture-height="30" >
                                    <positioning type="relative">50,5</positioning>
                                </texture>
                                <label>
                                    <positioning type="relative">35,16</positioning>
                                    <text>by Bumer_32</text>
                                </label>

                                <flow-layout direction="vertical">
                                    <children>
                                        <label><text>Hello world!</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                        <label><text>This is manual of Redstone Helper</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                        <label><text>If you open it and read it, you already installed mod!</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                        <label><text>Thank you!</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                    </children>
                                    <sizing>
                                        <horizontal method="fixed">270</horizontal>
                                        <vertical method="content">0</vertical>
                                    </sizing>
                                    <positioning type="relative">50,30</positioning>
                                </flow-layout>

                                <flow-layout direction="vertical">
                                    <children>
                                        <label><text>What is Redstone Helper?</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                        <label><text>Redstone Helper it's a mod, which must to help you with redstone</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                        <label><text>Also it implements redstone tools features (Work In Progress)</text><sizing><horizontal method="fill">100</horizontal></sizing><horizontal-text-alignment>center</horizontal-text-alignment></label>
                                    </children>
                                    <sizing>
                                        <horizontal method="fixed">360</horizontal>
                                        <vertical method="content">0</vertical>
                                    </sizing>
                                    <positioning type="relative">50,50</positioning>
                                </flow-layout>

                                <label>
                                    <positioning type="relative">50,65</positioning>
                                    <text>To check version type to chat:</text>
                                </label>
                                <box id="check_version_command_background_box">
                                    <positioning type="relative">50,75</positioning>
                                    <sizing>
                                        <horizontal method="fixed">180</horizontal>
                                        <vertical method="fixed">25</vertical>
                                    </sizing>
                                    <fill>true</fill>
                                </box>
                                <box id="check_version_command_background_box_outline">
                                    <positioning type="relative">50,75</positioning>
                                    <sizing>
                                        <horizontal method="fixed">180</horizontal>
                                        <vertical method="fixed">25</vertical>
                                    </sizing>
                                    <fill>false</fill>
                                </box>
                                <label>
                                    <positioning type="relative">50,73</positioning>
                                    <cursor-style>text</cursor-style>
                                    <text>/redstone-helper check-updates</text>
                                </label>
<!--*                                HERE ALL MANUAL END-->
                            </children>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>


                        <label id="label">
                            <positioning type="relative">50,0</positioning>
                            <text translate="true">gui.redstone-helper.manual.manual</text>
                        </label>
                        <label>
                            <positioning type="relative">0,99</positioning>
                            <text translate="true">gui.redstone-helper.manual.modrinth</text>
                        </label>
                        <label>
                            <positioning type="relative">11,99</positioning>
                            <text>|</text>
                        </label>
                        <label>
                            <positioning type="relative">13,99</positioning>
                            <text translate="true">gui.redstone-helper.manual.github</text>
                        </label>
                        <label>
                            <positioning type="relative">20,99</positioning>
                            <text>|</text>
                        </label>
                        <label>
                            <positioning type="relative">23,99</positioning>
                            <text translate="true">gui.redstone-helper.manual.crowdin</text>
                        </label>
                        <label id="page_count">
                            <positioning type="relative">73,99</positioning>
                            <text>0/0</text>
                        </label>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="previous_page_button">
                                    <sizing>
                                        <horizontal method="fixed">60</horizontal>
                                    </sizing>
                                    <text translate="true">gui.redstone-helper.manual.previous</text>
                                </button>

                                <button id="next_page_button">
                                    <sizing>
                                        <horizontal method="fixed">60</horizontal>
                                    </sizing>
                                    <text translate="true">gui.redstone-helper.manual.next</text>
                                </button>
                            </children>
                            <positioning type="relative">100,100</positioning>
                        </flow-layout>
                    </children>


                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel/>
                    </surface>

                    <padding>
                        <all>5</all>
                    </padding>

                    <sizing>
                        <horizontal method="fixed">500</horizontal>
                        <vertical method="fixed">250</vertical>
                    </sizing>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>