<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout id="layout" direction="vertical">
                    <children>
                        <flow-layout id="manual_layout" direction="vertical">
                            <children>
                                <!--*                                HERE ALL MANUAL-->

                                <!--*                                HERE ALL MANUAL END-->
                            </children>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>


                        <label id="label">
                            <positioning type="relative">50,0</positioning>
                            <text translate="true">gui.redstone-helper.manual.manual</text>
                        </label>
                        <label>
                            <positioning type="relative">0,99</positioning>
                            <text translate="true">gui.redstone-helper.manual.modrinth</text>
                        </label>
                        <label>
                            <positioning type="relative">11,99</positioning>
                            <text>|</text>
                        </label>
                        <label>
                            <positioning type="relative">13,99</positioning>
                            <text translate="true">gui.redstone-helper.manual.github</text>
                        </label>
                        <label>
                            <positioning type="relative">20,99</positioning>
                            <text>|</text>
                        </label>
                        <label>
                            <positioning type="relative">23,99</positioning>
                            <text translate="true">gui.redstone-helper.manual.crowdin</text>
                        </label>
                        <label id="page_count">
                            <positioning type="relative">73,99</positioning>
                            <text>0/0</text>
                        </label>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="previous_page_button">
                                    <sizing>
                                        <horizontal method="fixed">60</horizontal>
                                    </sizing>
                                    <text translate="true">gui.redstone-helper.manual.previous</text>
                                </button>

                                <button id="next_page_button">
                                    <sizing>
                                        <horizontal method="fixed">60</horizontal>
                                    </sizing>
                                    <text translate="true">gui.redstone-helper.manual.next</text>
                                </button>
                            </children>
                            <positioning type="relative">100,100</positioning>
                        </flow-layout>
                    </children>


                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>

                    <surface>
                        <panel/>
                    </surface>

                    <padding>
                        <all>5</all>
                    </padding>

                    <sizing>
                        <horizontal method="fixed">500</horizontal>
                        <vertical method="fixed">250</vertical>
                    </sizing>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>